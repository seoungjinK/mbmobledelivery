<Window x:Class="MBDManager.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        
        xmlns:local="clr-namespace:MBDManager.Views"
        xmlns:vm="clr-namespace:MBDManager.ViewModels" 
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
        mc:Ignorable="d"
        
        Title="MBDManager 로그인" Height="520" Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" AllowsTransparency="True" ResizeMode="NoResize"
        
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{materialDesign:MaterialDesignFont}"
        
        Closing="LoginWindow_Closing"
        MouseDown="Window_MouseDown">

    <Window.DataContext>
        <vm:LoginViewModel/>
    </Window.DataContext>

    <Grid>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0"
                Style="{StaticResource MaterialDesignIconButton}"
                ToolTip="닫기" 
                Command="{Binding CloseCommand}"
                Foreground="Gray">
            <materialDesign:PackIcon Kind="Close" />
        </Button>

        <StackPanel VerticalAlignment="Center" Margin="30">

            <TextBlock Text="MBDManager"
                       FontSize="28" FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,30"
                       Foreground="{DynamicResource PrimaryHueMidBrush}"/>

            <TextBox Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="0,10"
                     Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}">
                <materialDesign:HintAssist.Hint>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Account" Margin="0,0,5,0" />
                        <TextBlock Text="아이디 (Username)" />
                    </StackPanel>
                </materialDesign:HintAssist.Hint>
            </TextBox>

            <PasswordBox x:Name="txtPassword"
                         materialDesign:PasswordBoxAssist.IsPasswordRevealed="True" 
                         Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                         Margin="0,10">
                <materialDesign:HintAssist.Hint>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Lock" Margin="0,0,5,0" />
                        <TextBlock Text="비밀번호 (Password)" />
                    </StackPanel>
                </materialDesign:HintAssist.Hint>
            </PasswordBox>

            <TextBlock Text="{Binding ErrorMessage}"
                       Foreground="Red"
                       HorizontalAlignment="Center"
                       Margin="0,5,0,10"
                       TextWrapping="Wrap"/>

            <Button Content="로그인 (LOGIN)"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Margin="0,20"
                    Padding="10"
                    FontSize="16"
                    Command="{Binding LoginCommand}"
                    CommandParameter="{Binding ElementName=txtPassword}"
                    IsDefault="True"/>

        </StackPanel>
    </Grid>
</Window>