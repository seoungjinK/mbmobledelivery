<UserControl x:Class="MBDManager.Views.PaletteAgvView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MBDManager.Views"
             xmlns:vm="clr-namespace:MBDManager.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:wpf="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DataContext="{d:DesignInstance vm:PaletteAgvViewModel, IsDesignTimeCreatable=True}"
             d:DesignHeight="900" d:DesignWidth="1700">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <materialDesign:Card Grid.Column="0" Margin="10" Padding="20" UniformCornerRadius="8">
            <StackPanel>
                <TextBlock Text="구역 팔레트 상태" FontSize="20" FontWeight="Medium" Margin="0,0,0,20"/>

                <ItemsControl ItemsSource="{Binding PaletteStatuses}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="2"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <materialDesign:Card Margin="10" Padding="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <materialDesign:PackIcon Kind="Palette" Width="50" Height="50"
                                                             VerticalAlignment="Center" Margin="0,0,20,0"/>

                                    <StackPanel Grid.Column="1">
                                        <TextBlock Text="{Binding ZoneName}" FontSize="24" FontWeight="Bold"/>
                                        <TextBlock Text="{Binding StatusText}" FontSize="36" Margin="0,5,0,10"/>

                                        <ProgressBar Value="{Binding CurrentCount}" Maximum="{Binding MaxCount}" 
                                                     Height="15"/>

                                        <Button Content="AGV 호출" Margin="0,15,0,0"
                                                Style="{StaticResource MaterialDesignRaisedButton}"
                                                Background="#FF5722" BorderBrush="#FF5722"
                                                Foreground="White" FontWeight="Bold"
                                                Command="{Binding DataContext.RequestAgvCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding ZoneName}"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                </Grid>
                            </materialDesign:Card>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </materialDesign:Card>

        <StackPanel Grid.Column="1" Margin="10">

            <materialDesign:Card Padding="20" Margin="0,0,0,10" UniformCornerRadius="8">
                <StackPanel>
                    <TextBlock Text="AGV 호출 상태" FontSize="18" FontWeight="Medium" Margin="0,0,0,15"/>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel>
                            <TextBlock Text="연결 상태" FontSize="14" Foreground="Gray"/>
                            <TextBlock Text="{Binding AgvConnectionStatus}" FontSize="20" FontWeight="Bold"/>
                        </StackPanel>
                        <Ellipse Grid.Column="1" Width="20" Height="20"
                                 Style="{StaticResource StatusLightStyle}"
                                 DataContext="{Binding AgvConnectionStatusEnum}"/>
                    </Grid>
                    <Separator Margin="0,15"/>
                    <TextBlock Text="현재 동작" FontSize="14" Foreground="Gray"/>
                    <TextBlock Text="{Binding AgvCurrentAction}" FontSize="24" FontWeight="Bold"
                               Foreground="{DynamicResource PrimaryHueMidBrush}"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Padding="20" Margin="0,0,0,10" UniformCornerRadius="8">
                <StackPanel>
                    <TextBlock Text="회수 기록" FontSize="18" FontWeight="Medium" Margin="0,0,0,15"/>
                    <ListView ItemsSource="{Binding AgvHistory}" MaxHeight="250">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="시간" DisplayMemberBinding="{Binding Timestamp, StringFormat='MM-dd HH:mm'}" Width="120"/>
                                <GridViewColumn Header="구역" DisplayMemberBinding="{Binding Zone}" Width="90"/>
                                <GridViewColumn Header="상태" DisplayMemberBinding="{Binding Action}" Width="150"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Padding="10" UniformCornerRadius="8" Height="350">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                        <materialDesign:PackIcon Kind="Cctv" VerticalAlignment="Center" Margin="0,0,10,0"/>
                        <TextBlock Text="AGV 실시간 화면 (수동 조작)" FontSize="16" FontWeight="Bold"/>
                    </StackPanel>

                    <wpf:WebView2 x:Name="AgvWebView" Grid.Row="1"/>

                    <TextBlock Grid.Row="1" Text="웹 화면 로딩 중..." 
                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                               Foreground="Gray"/>
                </Grid>
            </materialDesign:Card>

        </StackPanel>
    </Grid>
</UserControl>